<%= form_with(model: @user, local: true) do |f| %>
  <% if @user.errors.any? %>
    <h4><%= @user.errors.count %> 件のエラーがあります。</h4>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  <ul class="user_form">
    <li class="name_field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </li>
    <li class="email_field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </li>
    <li class="password_field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <li class="password_confirmation_field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </li>
  </ul>

  <%= f.submit '登録する' %>
<% end %>
