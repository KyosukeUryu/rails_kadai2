<%= form_with(model: @picture, local: true, url: choose_new_or_edit ) do |f| %>
  <% if @picture.errors.any? %>
    <h4><%= @picture.errors.count %> 件のエラーがあります。</h4>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= image_tag @picture.image.url if @picture.image && @picture.image.url %>
  <ul class="picture_form">
    <li>
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </li>
    <li>
      <%= f.label :content %>
      <%= f.text_field :content %>
    </li>
  </ul>
  <%= f.submit '投稿' %>

<% end %>
