<h2>みんなの投稿一覧</h2>
<div class="pictures_index">
  <% @pictures.each do |pic| %>
    <div class="each_picture">
      <%= image_tag pic.image.url %>
      <p>内容：<%= pic.content %></p>
      <p>投稿者：<%= pic.user.name %></p>
      <%= link_to '詳しくチェック', picture_path(pic.id), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
