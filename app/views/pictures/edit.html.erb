<h2>投稿内容の編集はこちら</h2>

<%= form_with(model: @picture, local: true) do |f| %>
  <% if @picture.errors.any? %>
    <h4><%= @picture.errors.count %> 件のエラーがあります。</h4>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= image_tag @picture.image.url if @picture.image && @picture.image.url %>
  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>

<% end %>

<%= link_to '投稿を削除する', picture_path(@picture.id), method: :delete, data: { confirm: '本当に削除しますか？'} %>
