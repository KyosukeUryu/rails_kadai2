<h2>投稿しよう！</h2>

<%= form_with(model: @picture, local: true, url: confirm_pictures_path ) do |f| %>
  <% if @picture.errors.any? %>
    <h4><%= @picture.errors.count %> 件のエラーがあります。</h4>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>

<% end %>
