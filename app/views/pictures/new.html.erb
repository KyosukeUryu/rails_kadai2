<h2>投稿しよう！</h2>

<%= form_with(model: @picture, local: true) do |f| %>
  <% if @picture.errors.any? %>
    <h4><%= @picture.errors.count %> 件のエラーがあります。</h4>
    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>

<% end %>
